extends layout

block content
  div(id="wrapper")
    div(id="leftcolumn")
      div(id="form")
        form(id = 'contact-form' method='POST' action='/contact')
          ul
            li
              label(for='name') Name:
              input(type='text' name='name' value="<%= qs.person%>")
            li
              label(for='email') Email:
              input(type='email' name='email' value='<%= qs.email%>')
            li
              label(for='message') Message:
              input(type='TEXTAREA' name='message' value='<%= qs.text%>')
            li
              input(type='submit' value='submit')